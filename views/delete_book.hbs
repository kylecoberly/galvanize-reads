<section class="books">
    <form method="POST" action="/books/{{book.id}}?_method=DELETE">
        <div class="book">
            <figure>
                <img src="{{book.cover_url}}" alt="{{book.title}} book cover" />
            </figure>
            <div class="details">
                <h3>{{book.title}}</h3>
                <span class="genre">{{book.genre}}</span>
                <p>{{book.description}}</p>
            </div>
        </div>

        <input type="submit" class="delete" value="Delete {{book.title}}?" />
    </form>
</section>
